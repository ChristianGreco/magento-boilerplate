<layout>
    <default>
        <reference name="head">

            <!-- Remove assets that are not required with Magento Boilerplate -->
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/styles-ie.css</name>
            </action>
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/widgets.css</name>
            </action>
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/print.css</name>
            </action>
            <action method="removeItem">
                <type>js</type>
                <name>lib/ds-sleight.js</name>
            </action>
            <action method="removeItem">
                <type>skin_js</type>
                <name>js/ie6.js</name>
            </action>

            <!-- Add additional child block to modify the HTML <head> -->
            <block type="core/template" name="magentoboilerplate.head" template="magentoboilerplate/page/html/head.phtml"/>

        </reference>
        <reference name="before_body_end">

            <!--
                Add our own scripts to the bottom of the HTML, which is an
                optimisation that allows the page to load before scripts
                are processed, giving a better user experience
            -->
            <block type="core/template" name="magentoboilerplate.scripts" template="magentoboilerplate/page/html/scripts.phtml"/>

        </reference>
        <reference name="catalog.topnav">
            <action method="setTemplate">
                <template>magentoboilerplate/page/html/topmenu.phtml</template>
            </action>
        </reference>
    </default>
</layout>
